            <light type="area">
                <instance>
                    <shape type="sphere"/>
                    <emission type="lambertian">
                        <texture name="emission" type="constant" value="8,2,0.8"/>
                    </emission>
                    <transform>
                        <scale value="1"/>
                        <translate x="2.5" y="-4" z="1"/>
